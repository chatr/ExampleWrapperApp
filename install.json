{
    "resources": {
        "head": [
            {
                "type": "script",
                "src": "app.js"
            }
        ]
    },
    "options": {
        "properties": {
            "accountTip": {
                "order": 1,
                "showIf": {
                    "account.service": {
                        "op": "==",
                        "value": null
                    }
                },
                "type": "help",
                "helpvalue": "Showing demo Chatra account. <strong>Sign up</strong> or <strong>login</strong> to install Chatra on your website."
            },
            "account": {
                "order": 2,
                "title": "Chatra Account",
                "type": "object",
                "format": "account",
                "services": ["chatra"],
                "required": true
            },
            "button": {
                "order": 3,
                "title": "Chat Button",
                "type": "object",
                "properties": {
                    "position": {
                        "order": 1,
                        "title": "Button Position",
                        "type": "string",
                        "enum": ["bl", "bc", "br", "lt", "lm", "lb", "rt", "rm", "rb"],
                        "enumNames": {
                            "bl": "Bottom Left",
                            "bc": "Bottom Middle",
                            "br": "Bottom Right",
                            "lt": "Left Top",
                            "lm": "Left Middle",
                            "lb": "Left Bottom",
                            "rt": "Right Top",
                            "rm": "Right Middle",
                            "rb": "Right Bottom"
                        },
                        "default": "br"
                    },
                    "style": {
                        "order": 2,
                        "default": "tab",
                        "format": "radios",
                        "title": "Button Style",
                        "type": "string",
                        "enum": [
                            "tab",
                            "round"
                        ],
                        "enumNames": {
                            "tab": "Tab",
                            "round": "Round"
                        }
                    },
                    "size": {
                        "order": 3,
                        "title": "Button Size",
                        "type": "integer",
                        "format": "slider",
                        "default": 60,
                        "minimum": 40,
                        "maximum": 100,
                        "step": 1,
                        "showIf": {
                            "button.style": "round"
                        }
                    },
                    "textColor": {
                        "order": 4,
                        "default": "#ffffff",
                        "format": "color",
                        "title": "Button Text / Icon Color",
                        "type": "string"
                    },
                    "bgColor": {
                        "order": 5,
                        "default": "#0d8bcd",
                        "format": "color",
                        "title": "Button Background Color",
                        "type": "string"
                    },
                    "useChatraSettings": {
                        "order": 6,
                        "title": "Use Chat Button settings from <a href=\"https://app.chatra.io/settings/general\" target=\"_blank\">Chatra Dashboard</a> instead",
                        "type": "boolean",
                        "showIf": {
                            "account.service": {
                                "op": "!=",
                                "value": null
                            }
                        }
                    }
                }
            },
            "window": {
                "order": 4,
                "title": "Chat Window",
                "type": "object",
                "properties": {
                    "width": {
                        "order": 1,
                        "title": "Window Width",
                        "type": "integer",
                        "format": "slider",
                        "default": 340,
                        "minimum": 275,
                        "maximum": 500,
                        "step": 1
                    },
                    "height": {
                        "order": 2,
                        "title": "Window Height",
                        "type": "integer",
                        "format": "slider",
                        "default": 480,
                        "minimum": 350,
                        "maximum": 600,
                        "step": 1
                    },
                    "bubbleColorsTip": {
                        "order": 3,
                        "type": "help",
                        "helpvalue": "Try sending a message to check these:"
                    },
                    "clientBubbleBg": {
                        "order": 4,
                        "default": "#d4f2fc",
                        "format": "color",
                        "title": "Visitor’s Message Bubble Color",
                        "type": "string"
                    },
                    "agentBubbleBg": {
                        "default": "#f1f0f3",
                        "order": 5,
                        "format": "color",
                        "title": "Agent’s Message Bubble Color",
                        "type": "string"
                    }
                }
            },
            "advanced": {
                "order": 5,
                "title": "Advanced Options",
                "type": "object",
                "properties": {
                    "enabled": {
                        "order": 1,
                        "title": "Show Advanced Options",
                        "type": "boolean"
                    },
                    "language": {
                        "order": 2,
                        "title": "Widget Language",
                        "type": "string",
                        "enum": ["", "en", "de", "fr", "es", "nl", "ru"],
                        "enumNames": {
                            "": "Use language settings from Chatra Dashboard",
                            "en": "English",
                            "de": "German",
                            "fr": "French",
                            "es": "Spanish",
                            "nl": "Dutch",
                            "ru": "Russian"
                        },
                        "default": "",
                        "showIf": {
                            "advanced.enabled": true
                        }
                    },
                    "devices": {
                        "order": 3,
                        "title": "Devices",
                        "format": "radios",
                        "type": "string",
                        "enum": ["all", "mob", "notMob"],
                        "enumNames": {
                            "all": "Show the widget on all devices",
                            "mob": "Only show the widget on mobile devices",
                            "notMob": "Disable the widget on mobile devices"
                        },
                        "default": "all",
                        "showIf": {
                            "advanced.enabled": true
                        }
                    },
                    "zIndex": {
                        "order": 4,
                        "title": "Z-index of the widget",
                        "description": "Increase this value if other elements overlap the widget",
                        "type": "integer",
                        "default": 9999,
                        "placeholder": 9999,
                        "showIf": {
                            "advanced.enabled": true
                        }
                    },
                    "groupId": {
                        "order": 5,
                        "title": "Agent Group ID",
                        "description": "Assign visitors to a specific <a href=\"https://app.chatra.io/settings/groups\" target=\"_blank\">group of agents</a>",
                        "type": "string",
                        "showIf": {
                            "advanced.enabled": true,
                            "account.service": {
                                "op": "!=",
                                "value": null
                            }
                        }
                    }
                }
            },
            "settingsTip": {
                "order": 6,
                "showIf": {
                    "account.service": {
                        "op": "!=",
                        "value": null
                    }
                },
                "type": "help",
                "helpvalue": "Looking for more options? Check out your <a href=\"https://app.chatra.io/settings/general\" target=\"_blank\">Chatra Settings</a>"
            }
        }
    },
    "preview": {
        "handlers": [
            {
                "options": ["*"],
                "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
            }
        ]
    },
    "hooks": [
        {
            "endpoint": "https://app.chatra.io/cloudflare-install-check",
            "events": ["before-new-install", "before-update-install"],
            "block": true,
            "failure": {
                "action": "ignore"
            }
        }
    ]
}
